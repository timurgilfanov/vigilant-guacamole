root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Common Kotlin style
[*.{kt,kts}]
indent_style = space
indent_size = 4
continuation_indent_size = 4
max_line_length = 120

# Optional: IDE helpers
ij_kotlin_imports_layout = *,javax.**,java.**,kotlin.**
ij_kotlin_allow_trailing_comma = true